/dts-v1/;

#include "pic32mzda.dtsi"

/ {
	model = "Microchip PIC32MZSK";
	compatible = "microchip,pic32mzefsk", "microchip,pic32mz";

	aliases {
		console = &uart2;
		serial0 = &uart2;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};
};

&clock {
	microchip,refo2-frequency = <50000000>;
	microchip,refo4-frequency = <25000000>;
	microchip,refo5-frequency = <40000000>;
	status = "okay";
	u-boot,dm-pre-reloc;
};

&pinctrl {
	status = "okay";
	u-boot,dm-pre-reloc;
};

&uart2 {
	status = "okay";
	u-boot,dm-pre-reloc;
};

&sdhci {
	status = "okay";
};

&ethernet {
	reset-gpios = <&gpioJ 15 0>;
	status = "okay";
	phy-mode = "rmii";
	phy-handle = <&ethernet_phy>;
	ethernet_phy: lan8740_phy@0 {
		reg = <0>;
	};
};

&usb {
	status = "okay";
};

&spi1 {
	status = "okay";
	cs-gpios = <&gpioB 1 GPIO_ACTIVE_LOW>;
	flash@0 {
		reg = <0>;
		compatible = "spi-flash";
		spi-max-frequency = <40000000>;
	};
};
